.flip {
  -webkit-perspective: 800px;
  perspective: 800px;
  position: relative;
  text-align: center;

  .face-container {
    -webkit-transform-style: preserve-3d;
    -webkit-transition: $generic-hover-transition;
    transform-style: preserve-3d;
    transition: $generic-hover-transition;

    .face {
      -moz-backface-visibility: hidden;
      -webkit-backface-visibility: hidden;
      backface-visibility: hidden;
      border-radius: 50px;
      box-shadow: 0 0 1em rgba(0, 0, 0, 0.2);
    }

    .front {
      position: absolute;
      width: 100%;
      z-index: 0;

      .handle-container {
        position: absolute;
        left: 0;
        top: 0;
        height: 100%;
        width: 50px;
        border-radius: 50px 0 0 50px;
      }
    }

    .rear {
      -webkit-transform: rotateY(179.99deg) translateZ(1px);
      transform: rotateY(179.99deg) translateZ(1px);
      -moz-transform: rotateY(179.99deg) translateZ(1px);
    }
  }

  .face-container.flipped, &[data-trigger="hover"]:hover .face-container {
    -webkit-transform: rotateY(-179.99deg);
    transform: rotateY(-179.99deg);
    -moz-transform: rotateY(179.99deg);

    .ribbon {
      transform: scale(0);
      -webkit-transform: scale(0);
      -moz-transform: scale(0);
    }
  }

  &.hover-zoom:hover {
    box-shadow: none !important;

    .face.front > div, .face.rear > div {
      box-shadow: 0 0 30px rgba(0, 0, 0, 0.2);
    }
  }
}
