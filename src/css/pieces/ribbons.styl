.ribbon {
  position: absolute;
  right: -5px;
  top: -5px;
  z-index: 1;
  overflow: hidden;
  width: 75px;
  height: 75px;
  text-align: right;
  border-radius: 0 !important;

  span {
    font-size: 10px;
    font-weight: bold;
    color: #FFF;
    text-transform: uppercase;
    text-align: center;
    line-height: 20px;
    transform: rotate(45deg);
    -webkit-transform: rotate(45deg);
    width: 100px;
    display: block;
    background: $primary;
    background: linear-gradient(lighten($primary, 15%) 0%, $primary 100%);
    box-shadow: 0 3px 10px -5px rgba(0, 0, 0, 1);
    position: absolute;
    top: 19px;
    right: -21px;

    &::before {
      content: "";
      position: absolute;
      left: 0;
      top: 100%;
      z-index: -1;
      border-left: 3px solid $primary;
      border-right: 3px solid transparent;
      border-bottom: 3px solid transparent;
      border-top: 3px solid $primary;
    }

    &::after {
      content: "";
      position: absolute;
      right: 0;
      top: 100%;
      z-index: -1;
      border-left: 3px solid transparent;
      border-right: 3px solid $primary;
      border-bottom: 3px solid transparent;
      border-top: 3px solid $primary;
    }
  }

  &.secondary span {
    background: $secondary;
    background: linear-gradient(lighten($secondary, 15%) 0%, $secondary 100%);
  }

  &.warning span {
    background: $warning;
    background: linear-gradient(lighten($warning, 15%) 0%, $warning 100%);
  }

  &.positive span {
    background: $positive;
    background: linear-gradient(lighten($positive, 15%) 0%, $positive 100%);
  }

  &.negative span {
    background: $negative;
    background: linear-gradient(lighten($negative, 15%) 0%, $negative 100%);
  }

  &.info span {
    background: $info;
    background: linear-gradient(lighten($info, 15%) 0%, $info 100%);
  }

  &.accent span {
    background: $accent;
    background: linear-gradient(lighten($accent, 15%) 0%, $accent 100%);
  }
}
